<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">
        <LinearLayout
            android:background="@drawable/gradientbackgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_avatar"/>
            <TextView
                android:id="@+id/userName"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName"
                android:textColor="@color/colorPrimaryLighter"
                android:fontFamily="@font/aldrich"
                android:textStyle="bold"
                android:textSize="21sp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLighter">
        <LinearLayout
            android:background="@drawable/gradientbackgroupdgrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userEmail"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userEmail"
                android:textColor="@color/colorPrimaryLighter"
                android:fontFamily="@font/aldrich"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/numberOfSessions"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="numberOfSessions"
                android:textColor="@color/colorPrimaryLighter"
                android:fontFamily="@font/aldrich"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/numberOfRecords"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="numberOfRecords"
                android:textColor="@color/colorPrimaryLighter"
                android:fontFamily="@font/aldrich"
                android:textSize="21sp"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/editUserProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_selector"
                    android:fontFamily="@font/aldrich"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:shadowRadius="@android:integer/config_longAnimTime"
                    android:text="Edit profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>